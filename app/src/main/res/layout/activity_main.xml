<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/cardview_dark_background"
    >
    <TextView
        android:id="@+id/tv_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:scrollbars="vertical"
        android:textAlignment="textEnd"
        android:textColor="#BEE1E2E7"
        app:layout_constraintBottom_toTopOf="@+id/et_workspace"
        app:layout_constraintEnd_toStartOf="@+id/guideline4" />

    <EditText
        android:id="@+id/et_workspace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cursorVisible="true"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:textColorHint="#BEE1E2E7"
        android:hint="0"
        android:inputType="text"
        android:textAlignment="textEnd"
        android:textSize="40sp"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/tv_result"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="378dp"
        android:layout_height="42dp"
        android:ems="10"
        android:maxLines="1"
        android:minLines="1"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="24sp"
        android:textColor="#BEE1E2E7"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:visibility="gone"
            >

            <Button  style="@style/myTheme"
                android:id="@+id/btn_deg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#FF1565C0"
                android:text="DEG" />

            <Button style="@style/myTheme"
                android:id="@+id/btn_fact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#FF1565C0"
                android:text="FACT" />

            <Button style="@style/myTheme"
                android:id="@+id/btn_sin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="sin" />

            <Button style="@style/myTheme"
                android:id="@+id/btn_cos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="cos" />

            <Button style="@style/myTheme"
                android:id="@+id/btn_tan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="tan" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <Button style="@style/myTheme"
                android:id="@+id/btn_percentage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#FF1565C0"
                android:text="%" />
            <Button style="@style/myTheme"
                android:id="@+id/btn_rad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#FF1565C0"
                android:text="RAD" />

            <Button style="@style/myTheme"
                android:id="@+id/btn_log"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#FF1565C0"
                android:text="ã’" />

            <Button style="@style/myTheme"
                android:id="@+id/btn_square_root"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#FF1565C0"
                android:text="âˆš" />

            <Button style="@style/myTheme"
                android:id="@+id/btn_square"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#FF1565C0"
                android:text="^" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <Button style="@style/myTheme"
                android:id="@+id/btn_pi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ð›‘"
                android:textColor="#FF1565C0"
                />

            <Button style="@style/myTheme"
                android:id="@+id/btn_exp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ðž"
                android:textColor="#FF1565C0"
                />

            <Button style="@style/myTheme"
                android:id="@+id/btn_open_br"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="("
                android:textColor="#FF1565C0"
                />

            <Button style="@style/myTheme"
                android:id="@+id/btn_close_br"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=")"
                android:textColor="#FF1565C0"
                />

            <Button style="@style/myTheme"
                android:id="@+id/btn_clear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#FFF44336"
                android:text="CL" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <Button style="@style/myTheme"
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="7" />

            <Button style="@style/myTheme"
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8" />

            <Button style="@style/myTheme"
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9" />

            <Button style="@style/myTheme"
                android:id="@+id/btn_division"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="/" />

            <Button style="@style/myTheme"
                android:id="@+id/btn_correction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#FFFFEB3B"
                android:text="â†" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <Button style="@style/myTheme"
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4" />

            <Button style="@style/myTheme"
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5" />

            <Button style="@style/myTheme"
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="6" />

            <Button style="@style/myTheme"
                android:id="@+id/btn_mul"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="*" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <Button style="@style/myTheme"
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1" />

            <Button style="@style/myTheme"
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2" />

            <Button style="@style/myTheme"
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3" />

            <Button style="@style/myTheme"
                android:id="@+id/btn_minus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button style="@style/myTheme"
                android:id="@+id/button0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0" />

            <Button style="@style/myTheme"
                android:id="@+id/btn_dot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TextView>

            <Button style="@style/myTheme"
                android:id="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+" />

            <Button style="@style/myTheme"
                android:id="@+id/btn_equals"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="=" />


        </TableRow>
    </TableLayout>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>